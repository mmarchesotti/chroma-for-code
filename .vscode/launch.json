{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Debug Server-Side (Run)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "name": "Next.js: Attach to Existing Port",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
